<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <formset>

 <form name="visitaForm">
 <field
 property="asignado"
 depends="required">
 <arg key="visitaForm.asignado_por"/>
 </field>
  <field
 property="estado"
 depends="required">
 <arg key="visitaForm.estado"/>
 </field>
  <field
 property="comentarios"
 depends="required">
 <arg key="visitaForm.comentarios"/>
 </field>
  <field
 property="comentariosV"
 depends="required">
 <arg key="visitaForm.comentariosV"/>
 </field>

 </form>

 <form name="FacultadForm">
 <field
 property="nombre"
 depends="required">
 <arg key="FacultadForm.nombre"/>
 </field>
 </form>

 <form name="ValidacionForm">
 <field
 property="usuario"
 depends="required">
 <arg key="ValidacionForm.usuario"/>
 </field>
 
 <field
 property="password"
 depends="required">
 <arg key="ValidacionForm.password"/>
 </field>
 </form>
 
  <form name="EscuelaForm">
 <field
 property="nombre"
 depends="required">
 <arg key="EscuelaForm.nombre"/>
 </field>
 </form>
 
  <form name="InstitucionesForm">
 <field
 property="nombre"
 depends="required">
 <arg key="InstitucionesForm.nombre"/>
 </field>
 
 <field
 property="direccion"
 depends="required">
 <arg key="InstitucionesForm.direccion"/>
 </field>
 
 <field
 property="pcontacto"
 depends="required">
 <arg key="InstitucionesForm.pcontacto"/>
 </field>
 
 <field
 property="ptelefono"
 depends="required, mask">
 <arg key="InstitucionesForm.ptelefono"/>
 <var>
 <var-name>mask</var-name>
 <var-value>'(999) 9999-9999'</var-value>
 </var>
 </field>
 
 
 <field
 property="scontacto"
 depends="required">
 <arg key="InstitucionesForm.scontacto"/>
 </field>
 
 <field
 property="stelefono"
 depends="required, mask">
 <arg key="InstitucionesForm.stelefono"/>
 <var>
 <var-name>mask</var-name>
 <var-value>'(999) 9999-9999'</var-value>
 </var>
 </field>

 </form>

    </formset>

    

</form-validation>
